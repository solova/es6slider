doctype html
html(lang="en")
  head
    title= pageTitle
    link(href='//fonts.googleapis.com/css?family=Comfortaa&subset=latin,cyrillic', rel='stylesheet', type='text/css')
    link(href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css', rel='stylesheet', type='text/css')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='main.css', rel='stylesheet',type='text/css')

  body

    .container

      .tabs
        .menu
          a.tab-caption.active(href='#') Фотографії
          a.tab-caption(href='#') Налаштування

        .tab.gallery
          .controls
            select.category
              each category in categories
                option(value=category)= category
            select.favorites
              option(value=0) Всі
              option(value=1) Улюблені
          .preview
            .actions
              .action.prev(title='Попередня'): i.fa.fa-angle-left
              .action.next(title='Наступна'): i.fa.fa-angle-right
              .action.like(title='Файно'): i.fa.fa-heart-o

        .tab.settings
          form
            label
              .label Ширина
              input(type='number', name='width',min="100",max="1920")
            label
              .label Высота
              input(type='number', name='height',min="100",max="1920")

    script(src='app.js')